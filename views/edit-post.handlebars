<div class="post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        
        <label for="post-title" class="form-label">Title</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input" />

        <label for="post-body" class="form-label">Content</label>
        <textarea name="post-title" value="{{post.title}}" class="form-input">{{post.body}}</textarea>

        <button class="btn" type="submit">Update</button>

        <button class="btn" type="button" id="delete-btn">Delete</button>
    </form>
</div>

<script src="/javascript/edit.js"></script>